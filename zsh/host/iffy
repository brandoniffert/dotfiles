# vim:ft=zsh

# Prevent exit on eof
setopt IGNORE_EOF

# Set host specific exports
export PASSWORD_STORE_DIR="$XDG_CONFIG_HOME/password-store"
export HELM_CACHE_HOME="$XDG_CACHE_HOME/helm"
export HELM_CONFIG_HOME="$XDG_CONFIG_HOME/helm"
export HELM_DATA_HOME="$XDG_DATA_HOME/helm"
export HOMEBREW_NO_ANALYTICS=1

# Set askpass helper
export SUDO_ASKPASS=$(which osaaskpass)

# Aliases
alias ap='ansible-playbook'
alias ave='ansible-vault edit'
alias avv='ansible-vault view'
alias ls='gls --color=auto'
alias lls='gls --color=auto -al'
