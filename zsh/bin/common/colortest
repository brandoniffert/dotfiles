#!/usr/bin/env bash

#   Daniel Crisman's ANSI color chart script from
#   The Bash Prompt HOWTO: 6.1. Colours
#   http://www.tldp.org/HOWTO/Bash-Prompt-HOWTO/x329.html
#
#   This function echoes a bunch of color codes to the
#   terminal to demonstrate what's available.  Each
#   line is the color code of one forground color,
#   out of 17 (default + 16 escapes), followed by a
#   test use of that color on all nine background
#   colors (default + 8 escapes).

T='•••'   # The text for the color test

echo -e "\n         def     40m     41m     42m     43m     44m     45m     46m     47m";

for FGs in '    m' '   1m' '  30m' '1;30m' '  31m' '1;31m' '  32m' \
           '1;32m' '  33m' '1;33m' '  34m' '1;34m' '  35m' '1;35m' \
           '  36m' '1;36m' '  37m' '1;37m';
do FG=${FGs// /}
  echo -en " $FGs \033[$FG  $T  "

  for BG in 40m 41m 42m 43m 44m 45m 46m 47m;
  do echo -en "$EINS \033[$FG\033[$BG  $T  \033[0m";
  done
  echo;
done
echo

echo -e "\e[30mNormal\e[0m \e[1;30mBright\e[0m \e[2;30mDim\e[0m \e[3;30mItalic\e[0m \e[4;30mUnderline\e[0m \e[9;30mStrikethrough\e[0m"
echo -e "\e[31mNormal\e[0m \e[1;31mBright\e[0m \e[2;31mDim\e[0m \e[3;31mItalic\e[0m \e[4;31mUnderline\e[0m \e[9;31mStrikethrough\e[0m"
echo -e "\e[32mNormal\e[0m \e[1;32mBright\e[0m \e[2;32mDim\e[0m \e[3;32mItalic\e[0m \e[4;32mUnderline\e[0m \e[9;32mStrikethrough\e[0m"
echo -e "\e[33mNormal\e[0m \e[1;33mBright\e[0m \e[2;33mDim\e[0m \e[3;33mItalic\e[0m \e[4;33mUnderline\e[0m \e[9;33mStrikethrough\e[0m"
echo -e "\e[34mNormal\e[0m \e[1;34mBright\e[0m \e[2;34mDim\e[0m \e[3;34mItalic\e[0m \e[4;34mUnderline\e[0m \e[9;34mStrikethrough\e[0m"
echo -e "\e[35mNormal\e[0m \e[1;35mBright\e[0m \e[2;35mDim\e[0m \e[3;35mItalic\e[0m \e[4;35mUnderline\e[0m \e[9;35mStrikethrough\e[0m"
echo -e "\e[36mNormal\e[0m \e[1;36mBright\e[0m \e[2;36mDim\e[0m \e[3;36mItalic\e[0m \e[4;36mUnderline\e[0m \e[9;36mStrikethrough\e[0m"
echo -e "\e[37mNormal\e[0m \e[1;37mBright\e[0m \e[2;37mDim\e[0m \e[3;37mItalic\e[0m \e[4;37mUnderline\e[0m \e[9;37mStrikethrough\e[0m"
