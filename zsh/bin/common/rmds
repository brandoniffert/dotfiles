#!/usr/bin/env bash

set -e

# Recursively remove .DS_Store files

results=$(fd --hidden --no-ignore .DS_Store 2>&1)

if [ ${#results} -eq 0 ]; then
  echo '> Nothing found.'
  echo
else
  echo "$results"
  echo

  printf '%s' 'Do you want to remove these files? [y|N] '
  read -r response
  if [[ $response =~ (yes|y|Y) ]]; then
    fd --hidden --no-ignore '^\.DS_Store$' -tf -X rm
  fi
fi
